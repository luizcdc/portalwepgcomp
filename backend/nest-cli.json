{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "src/certificate/assets/**/*", "outDir": "dist/assets" }
    ],
    "plugins": ["@nestjs/swagger"],
    "builder": "swc",
    "typeCheck": true
  }
}
