{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "../public/**/*", "outDir": "dist/public" }
    ],
    "plugins": ["@nestjs/swagger"],
    "builder": "swc",
    "typeCheck": true
  }
}
