generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ATIVO
  PENDENTE
}

model Student {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  surname      String?
  registration String
  advisor      String
  photo        String?
  program      String
  password     String
  status       UserStatus
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Teacher {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  surname      String?
  registration String
  photo        String?
  password     String
  status       UserStatus
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
