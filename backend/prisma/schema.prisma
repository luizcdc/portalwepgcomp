generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id    String
  email String  @unique
  name  String
  surname String?
  registration String
  advisor String
  photo String?
  program String
  password String
  status String
  createdAt DateTime @default(now()) @db.Date
  updatedAt DateTime @default(now()) @db.Date
}

model Teacher {
  id    String
  email String  @unique
  name  String
  surname String?
  registration String
  photo String?
  password String
  status String
  createdAt DateTime @default(now()) @db.Date
  updatedAt DateTime @default(now()) @db.Date
}