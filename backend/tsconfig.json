{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true, 
    "outDir": "./dist", 
    "strict": true, 
    "noUnusedLocals": true, 
    "noUnusedParameters": true, 
    "noImplicitReturns": true, 
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, 
    "baseUrl": "./", 
    "paths": { 
      "@src/*": ["./src/*"] 
    }, 
    "esModuleInterop": true, 
    "inlineSources": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false 
  } 
}